{
	"name": "zuzu_backend_node",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"start": "cross-env STAGE=dev nest start",
		"start:dev": "cross-env STAGE=dev nest build --webpack --webpackPath webpack-hmr.config.js --watch",
		"start:integ": "cross-env STAGE=integ nest build --webpack --webpackPath webpack-hmr.config.js --watch",
		"start:debug": "cross-env STAGE=dev nest start --debug --watch",
		"start:prod": "cross-env STAGE=prod node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "cross-env STAGE=test jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./apps/api-server/test/jest-e2e.json",
		"typeorm": "cross-env STAGE=dev node --require ts-node/register ./node_modules/typeorm/cli.js -f apps/api-server/src/database/database.config.ts",
		"seed:config": "cross-env STAGE=DEV node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js config -n apps/api-server/src/database/database.config.ts",
		"seed:run": "cross-env STAGE=DEV node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js seed -n apps/api-server/src/database/database.config.ts"
	},
	"dependencies": {
		"@nestjs/common": "^8.0.0",
		"@nestjs/config": "^2.1.0",
		"@nestjs/core": "^8.0.0",
		"@nestjs/jwt": "^9.0.0",
		"@nestjs/passport": "^8.2.2",
		"@nestjs/platform-express": "^8.0.0",
		"@nestjs/swagger": "^5.2.1",
		"@nestjs/typeorm": "^8.1.4",
		"@types/jsonwebtoken": "^8.5.8",
		"bcrypt": "^5.0.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"dotenv": "^16.0.1",
		"joi": "^17.6.0",
		"jsonwebtoken": "^8.5.1",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.0",
		"passport-kakao": "^1.0.1",
		"pg": "^8.7.3",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0",
		"swagger-ui-express": "^4.4.0",
		"typeorm": "^0.3.6",
		"typeorm-naming-strategies": "^4.1.0",
		"typeorm-seeding": "^1.6.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.4.7",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/faker": "^6.6.9",
		"@types/jest": "27.4.1",
		"@types/node": "^16.0.0",
		"@types/passport-jwt": "^3.0.6",
		"@types/passport-kakao": "^0.2.1",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^27.2.5",
		"prettier": "^2.3.2",
		"run-script-webpack-plugin": "^0.0.14",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "^27.0.3",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^3.10.1",
		"typescript": "^4.3.5",
		"webpack": "^5.73.0",
		"webpack-node-externals": "^3.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/apps/"
		]
	}
}
